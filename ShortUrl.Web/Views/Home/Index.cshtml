@using ShortUrl.Web.Models.ViewModels
@using ShortUrl.Library.Abstracts;
@model HomeViewModel

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            <h2>Create </h2>
            <p>
               @Html.TextBoxFor(x => x.NewUrl.Url)
               @Html.ValidationMessageFor(x => x.NewUrl.Url)
            </p>
            <p>
                @Html.TextBoxFor(x => x.NewUrl.ShortenedUrl)
                @Html.ValidationMessageFor(x => x.NewUrl.ShortenedUrl)
            </p>
            <p>
                <input class="btn btn-default" type="submit" value="Save" />                
            </p>
        }
    </div>
    <div class="col-md-4">
        Existing urls:
        <ul>
            @foreach (UrlWrapper urlWrapper in Model.ExistingUrls)
            {
                <li>
                    <a href="@urlWrapper.Url">@urlWrapper.ShortenedUrl</a>
                </li>
            }
        </ul>
    </div>
</div>